rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection: users can read/write their own profile, admins can read/write all
    match /users/{userId} {
      allow read, write: if request.auth != null && 
                            (request.auth.uid == userId || isAdmin());
      // Allow users to create their own profile during registration
      allow create: if request.auth != null && 
                      request.auth.uid == userId;
    }

    // User stats: users can read/write their own stats, admins can read/write all
    match /user_stats/{userId} {
      allow read, write: if request.auth != null && 
                            (request.auth.uid == userId || isAdmin());
      // Allow users to create their own stats during registration or first questionnaire
      allow create: if request.auth != null && 
                      request.auth.uid == userId;
    }

    // Questionnaires: anyone can read, authenticated users can write, admins can do everything
    match /questionnaires/{document} {
      allow read: if true;
      allow write: if request.auth != null;
      allow create, update, delete: if request.auth != null && 
                                      (request.auth != null || isAdmin());
    }

    // Questionnaire responses: users can read/write their own responses, admins can read/write all
    match /questionnaire_responses/{document} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         request.auth.uid == request.resource.data.userId ||
         isAdmin());
      allow create: if request.auth != null && 
                      (request.auth.uid == request.resource.data.userId || isAdmin());
    }
  }
}
